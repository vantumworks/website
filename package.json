{
  "name": "vantum-works-website",
  "version": "1.0.0",
  "description": "Marketing website for Vantum Works LLC",
  "scripts": {
    "dev": "concurrently \"npm run watch:css\" \"npx serve . -p 3000\"",
    "watch:css": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "build": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "serve": "npx serve . -p 3000"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "tailwindcss": "^3.4.1"
  },
  "keywords": [
    "vantum-works",
    "software-studio",
    "marketing-website"
  ],
  "author": "Vantum Works LLC",
  "license": "UNLICENSED",
  "private": true
}
